facts = '{"troposfeer":[{"fact":"Vliegtuigen vliegen in het bovenste gedeelte van de troposfeer omdat de motoren beter werken bij lage temperaturen.","question":"Bij welke temperaturen werken de motoren van een vliegtuig het best?","answers":["Lage","Gemiddelde","Hoge","Heeft geen invloed"],"correctAnswer":"Lage"},{"fact":"De naam troposfeer is afgeleid van het Griekse woord voor mengen of draaien, tropos.","question":"Voor het benoemen van de sferen haalden we inspiratie uit het Griekse woordenboek. Wat betekent tropos ook alweer?","answers":["Shaken","Springen","Koken","Mengen"],"correctAnswer":"Mengen"}],"stratosfeer":[{"fact":"In de stratosfeer vind je de ozonlaag. Ozon is een speciaal soort zuurstof die ons beschermt tegen de gevaarlijke stralen van de zon.","question":"De ozonlaag is een beschermlaag in de atmosfeer. Tegen welke gevaarlijke stralen beschermt ozon ons?","answers":["RÃ¶ntgenstralen","Zonnestralen","Radiostralen","Microgolfstralen"],"correctAnswer":"Zonnestralen"},{"fact":"In de stratosfeer komen hoofdzakelijk horizontale luchtbewegingen voor. Dit is positief voor vliegtuigen die op deze hoogte vliegen.","question":"Vliegtuigen vliegen ook in de stratosfeer door een bepaalde luchtbeweging die hier te vinden is. Welke luchtbeweging?","answers":["Horizontale","Verticale","Geen","Diagonale"],"correctAnswer":"Horizontale"}],"mesosfeer":[{"fact":"De lucht is op deze hoogte heel erg koud. Het kan in de mesosfeer tot -90\u00b0C worden! Brrrrr.","question":"In de mesosfeer kan het heel erg koud worden. Welke temperaturen zouden we hier kunnen meten? ","answers":["10\u00b0C","0\u00b0C","-20\u00b0C","-90\u00b0C"],"correctAnswer":"-90\u00b0C"},{"fact":"Omdat we voorbij de ozonlaag zijn, zouden mensen hier (ondanks de koude) snel een vreselijke zonnebrand oplopen.","question":"In de ijskoude mesosfeer krijgen we geen bescherming meer van de ozonlaag. Wat zou er gebeuren als wij daar met een jetpack vliegen?","answers":["Onderkoeling","Niks","Misselijk","Zonnebrand"],"correctAnswer":"Zonnebrand"}],"thermosfeer":[{"fact":"De thermosfeer is genoemd naar het Griekse woord voor wamte, thermos. Heel toepasselijk voor de enorm oplopende temperaturen hier...","question":"Voor het benoemen van de sferen haalden we inspiratie uit het Griekse woordenboek. Wat betekent thermos ook alweer?","answers":["Koffie","Zon","Warmte","Koude"],"correctAnswer":"Warmte"},{"fact":"Het internationale ruimtestation (ISS) vliegt op een baan rond de aarde in dit deel van de atmosfeer.","question":"In de thermosfeer vinden we niet alleen het prachtige poollicht, maar ook ...","answers":["Internationaal ruimtestation ISS","Tesla Roadster","De maan","Spoetnik"],"correctAnswer":"Internationaal ruimtestation ISS"}],"exosfeer":[{"fact":"De exosfeer is de buitenste laag van de atmosfeer en vormt de overgang met de ruimte.","question":"Welke sfeer is de buitenste laag van de atmosfeer en vormt de overgang met de ruimte?","answers":["Troposfeer","Mesosfeer","Thermosfeer","Exosfeer"],"correctAnswer":"Exosfeer"},{"fact":"De meerderheid van de satelieten bewegen in deze buitenste laag van de atmosfeer rond de aarde.","question":"Welke grote objecten kan je vooral terugvinden in de buitenste laag van de atmosfeer, de exosfeer?","answers":["Satelieten","Meteoren","Internationaal ruimteschip ISS","Weerbalonnen"],"correctAnswer":"Satelieten"}]}';